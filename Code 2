#include <stdio.h>
#define MAX 5   // Maximum number of parcels

int stack[MAX];
int top = -1;

// Function to push (add) a parcel
void push() {
    int parcel;
    if (top == MAX - 1)
        printf("\nStack is full! No more parcels can be added.\n");
    else {
        printf("Enter parcel ID to add: ");
        scanf("%d", &parcel);
        top++;
        stack[top] = parcel;
        printf("Parcel %d added to the stack.\n", parcel);
    }
}

// Function to pop (remove) a parcel
void pop() {
    if (top == -1)
        printf("\nStack is empty! No parcels to handle.\n");
    else {
        printf("Parcel %d removed (handled).\n", stack[top]);
        top--;
    }
}

// Function to display parcels
void display() {
    int i;
    if (top == -1)
        printf("\nNo parcels in the stack.\n");
    else {
        printf("\nCurrent parcels in stack (Top to Bottom):\n");
        for (i = top; i >= 0; i--) {
            printf("Parcel ID: %d\n", stack[i]);
        }
    }
}

// Main function
int main() {
    int choice;

    printf("=== Post Office Parcel Handling System (Stack Implementation) ===\n");

    do {
        printf("\nMenu:\n");
        printf("1. Add Parcel (Push)\n");
        printf("2. Handle Parcel (Pop)\n");
        printf("3. Display Parcels\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                push();
                break;
            case 2:
                pop();
                break;
            case 3:
                display();
                break;
            case 4:
                printf("Exiting the system... Goodbye!\n");
                break;
            default:
                printf("Invalid choice! Try again.\n");
        }
    } while(choice != 4);

    return 0;
}
