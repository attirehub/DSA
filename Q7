Q7
#include <stdio.h>
int main() {
    int i, j, space;
    int n = 4; // height of upper half

    // upper half
    for(i = 1; i <= n; i++) {
        for(space = i; space < n; space++)
            printf(" ");
        for(j = 1; j <= i; j++)
            printf("%d ", i);
        printf("\n");
    }

    // lower half
    for(i = n - 1; i >= 1; i--) {
        for(space = n; space > i; space--)
            printf(" ");
        for(j = 1; j <= i; j++)
            printf("%d ", i);
        printf("\n");
    }
    return 0;
}
