Q9)
#include <stdio.h>
int main() {
    int i, j;
    char ch;
    int n = 4;

    for(i = 1; i <= n; i++) {
        for(j = i; j < n; j++)
            printf(" ");
        for(ch = 'A'; ch < 'A' + i; ch++)
            printf("%c", ch);
        for(ch = 'A' + i - 2; ch >= 'A'; ch--)
            printf("%c", ch);
        printf("\n");
    }
    return 0;
}
