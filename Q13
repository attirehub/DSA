#include <stdio.h>

int main() {
    int n, i, j, minIndex;
    float price[50], temp;

    printf("Enter number of products: ");
    scanf("%d", &n);

    printf("Enter %d product prices:\n", n);
    for (i = 0; i < n; i++)
        scanf("%f", &price[i]);

    // Selection Sort
    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (price[j] < price[minIndex])
                minIndex = j;
        }

        // Swap
        temp = price[i];
        price[i] = price[minIndex];
        price[minIndex] = temp;
    }

    printf("\nPrices in ascending order:\n");
    for (i = 0; i < n; i++)
        printf("%.2f ", price[i]);
    printf("\n");

    return 0;
}
